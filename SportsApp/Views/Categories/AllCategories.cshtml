@* @model IEnumerable<SportsApp.Models.Category> *@

@{
    ViewData["Title"] = "Categories Data Table";
}
<div class="container" style="padding:20px 0px;">
    <div class="text-center tableAdmin" style="margin-bottom:20px;">
        <div class="text-center yellowsite" style="margin-bottom:20px;">
            <h4>All Categories</h4>
            <a class="btn neonbutton" style="margin-top:20px" asp-controller="Categories" asp-action="Create">Create a Sport Category</a>
        </div>
        <hr />
        <div class="table-responsive">
            <table id="DT_loadCategories" class="table table-striped table-bordered" style="width:100%">
                <thead class="light">
                    <tr>
                        <th>Name</th>
                        <th>Min Capacity</th>
                        <th>Max Capacity</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>

@section Scripts{
<script src="~/js/ListAllCategories.js"></script>
}