@model SportsApp.Models.Team
@using SportsApp.Data

@{
    var categories = (List<Category>)ViewData["categorys"];
}
<div style="background-image: url('/img/ImagesSite/ReqTeams4.jpg'); background-size:cover; min-height:100vh">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero-text">
                    <div class="text-center" style="margin-top: 60px;">
                        <img src="~/img/placeholder.png" alt="">
                        <h1 style="font-weight: 700;font-size: 50px;text-shadow: 1px 1px #000000;">Here are your team join requests!</h1>
                    </div>
                    <div class="filter-search row">
                        <div class="category-search col-lg-5 col-md-4 col-sm-6">
                            <h5>Select Sport</h5>
                            <select class="ca-search ">
                                @foreach (var category in categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                        <div class="location-search col-lg-5 col-md-4 col-sm-6">
                            <h5>Your Location</h5>
                            <select class="lo-search show-tick" data-live-search="true"
                                    asp-items="@Html.GetEnumSelectList(typeof(SportsApp.Models.Cities))">
                            </select>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6  offset-lg-0 offset-md-0 offset-sm-3" style="margin-top:auto">
                            <button type="button" class=" btn search-filterButton" onclick="FilterTeamRequests()">Search Teams</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="trending-restaurant" style="padding: 40px 0px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center">
                        <h2 style="color:#ffc107">Here are are the teams you asked to join!</h2>
                        <p style="color:white;font-weight: 700;">Explore some of the best Teams that want to play your Sport!</p>
                    </div>
                </div>
            </div>
            <div class="row" id="filteredTeams">

            </div>
        </div>
    </section>
</div>
@section Scripts{
    <script src="~/js/teamsRequestList.js"></script>
    <script>
    $(document).ready(function () {
            FilterAllTeamRequests();
    });
    </script>
}
