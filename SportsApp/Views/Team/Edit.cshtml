@model SportsApp.ViewModels.TeamViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/teamDetails.css" />

<div style="background-image: url('/img/ImagesSite/CreateTeam4.jpg');">
    <div style="padding: 50px 0px">
        <div class="col-md-10 mx-auto py-4">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header edit-header rounded-3 text-uppercase text-white">
                            <h5>Edit Team</h5>
                        </div>
                        <div class="card-body">
                            <form class="col-md-12" enctype="multipart/form-data" asp-action="Edit" asp-route-id="@ViewData["Id"]">
                                <div class="row">
                                    <div class="form-group" style="text-align:center;width:100%">
                                        <div class="form-group" style="text-align:center">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control"/>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" style="text-align:center">
                                    <label asp-for="City" class="control-label"></label>
                                    <div style="width:100%">
                                        <select asp-for="City" class="selectpicker show-tick form-control" data-live-search="true"
                                                asp-items="@Html.GetEnumSelectList(typeof(SportsApp.Models.Cities))">
                                            <option value="" disabled selected hidden>Please choose your city...</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <!--<div class="form-group" style="text-align:center">
                                    <label asp-for="Categories" class="control-label">Sport Category</label><br>
                                    <select id="categoryList" class="selectpicker show-tick form-control" asp-for="CategoryId"
                                            asp-items='(new SelectList(Model.Categories,"Id","Name"))'
                                            style="width:100%;height:fit-content;font-size:20px;">
                                    </select>
                                    <span asp-validation-for="Categories" class="text-danger"></span>
                                </div>-->
                                <div class="form-group" style="display:flex;justify-content:center;align-items:center;margin-top:20px">
                                    <input type="submit" value="submit" class="btn btn-sm btn-submit-team rounded-3 text-uppercase" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
