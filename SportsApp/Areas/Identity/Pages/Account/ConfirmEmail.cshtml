@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}
<div style="background-image: url('/img/ImagesSite/CreateTeam4.jpg');min-height:100vh;">
    <div style="padding: 50px 0px">
        <div class="col-md-12 mx-auto py-4">
            <div class="row">
                <div class="col-lg-3 col-md-2 col-sm-1"></div>
                <div class="col-lg-6 col-md-8 col-sm-10">
                    <div class="card" style="background-color:rgba(255, 255, 255, 0.8)!important;">
                        <div class="card-header primary-btn rounded-3 text-uppercase text-white text-center">
                            <h5>Email confirmation successfull!</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group" style="text-align:center">
                                        <h3>Now you are allowed to log-in again!</h3>

                                    </div>
                                </div>
                            </div>
                            <div class="form-group" style="display:flex;justify-content:center;align-items:center;margin-top:20px">
                                <button class="btn btn-sm primary-btn rounded-3 text-uppercase">Click on top right to log-in!</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-2 col-sm-1"></div>
            </div>
        </div>
    </div>
</div>